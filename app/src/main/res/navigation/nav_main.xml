<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/frag_home">

    <fragment
        android:id="@+id/frag_home"
        android:name="com.example.teambuilder.ui.fragment.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_frag_home_to_frag_team_build"
            app:destination="@id/frag_team_build" />
        <action
            android:id="@+id/action_frag_home_to_frag_match"
            app:destination="@id/frag_match" />
        <action
            android:id="@+id/action_frag_home_to_frag_match_history"
            app:destination="@id/frag_match_history" />
        <action
            android:id="@+id/action_frag_home_to_frag_win_rate"
            app:destination="@id/frag_win_rate" />
        <argument
            android:name="isMatchExist"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/frag_match"
        android:name="com.example.teambuilder.ui.fragment.match.MatchFragment"
        tools:layout="@layout/fragment_match">
        <argument
            android:name="teamA"
            app:argType="com.example.teambuilder.data.model.Player[]"
            app:nullable="true" />
        <argument
            android:name="teamB"
            app:argType="com.example.teambuilder.data.model.Player[]"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/frag_team_build"
        android:name="com.example.teambuilder.ui.fragment.team_build.TeamBuildFragment"
        tools:layout="@layout/fragment_team_build">
        <action
            android:id="@+id/action_frag_team_build_to_frag_match"
            app:destination="@id/frag_match"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popUpTo="@+id/nav_main"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/frag_match_history"
        android:name="com.example.teambuilder.ui.fragment.match_history.MatchHistoryFragment"
        tools:layout="@layout/fragment_match_history"/>

    <fragment
        android:id="@+id/frag_win_rate"
        android:name="com.example.teambuilder.ui.fragment.win_rate.WinRateFragment"
        tools:layout="@layout/fragment_win_rate"/>
    <action
        android:id="@+id/action_global_frag_match_history"
        app:enterAnim="@anim/slide_from_right"
        app:exitAnim="@anim/slide_to_left"
        app:popUpTo="@+id/nav_main"
        app:popUpToInclusive="true"
        app:destination="@id/frag_match_history" />
    <action
        android:id="@+id/action_global_frag_win_rate"
        app:destination="@id/frag_win_rate" />
    <action android:id="@+id/action_global_frag_home" app:destination="@id/frag_home" />
</navigation>