<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/frag_team_build">

    <fragment
        android:id="@+id/frag_match"
        android:name="com.example.teambuilder.ui.fragment.match.MatchFragment"
        tools:layout="@layout/fragment_match">
        <action
            android:id="@+id/action_frag_match_to_frag_match_history"
            app:destination="@id/frag_match_history" />
        <action
            android:id="@+id/action_frag_match_to_frag_win_rate"
            app:destination="@id/frag_win_rate" />
        <argument
            android:name="teamA"
            app:argType="com.example.teambuilder.data.model.Player[]" />
        <argument
            android:name="teamB"
            app:argType="com.example.teambuilder.data.model.Player[]" />
    </fragment>

    <fragment
        android:id="@+id/frag_team_build"
        android:name="com.example.teambuilder.ui.fragment.team_build.TeamBuildFragment"
        tools:layout="@layout/fragment_team_build">
        <action
            android:id="@+id/action_frag_team_build_to_frag_match"
            app:destination="@id/frag_match"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/nav_main"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/frag_match_history"
        android:name="com.example.teambuilder.ui.fragment.match_history.MatchHistoryFragment"
        tools:layout="@layout/fragment_match_history">
        <action
            android:id="@+id/action_frag_match_history_to_frag_match"
            app:destination="@id/frag_match" />
    </fragment>

    <fragment
        android:id="@+id/frag_win_rate"
        android:name="com.example.teambuilder.ui.fragment.win_rate.WinRateFragment"
        tools:layout="@layout/fragment_win_rate">
        <action
            android:id="@+id/action_frag_win_rate_to_frag_match"
            app:destination="@id/frag_match" />
    </fragment>
</navigation>